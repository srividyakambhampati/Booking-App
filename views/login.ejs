<%- include('partials/header') %>

    <div class="container" style="max-width: 400px; margin-top: 4rem;">
        <div class="card">
            <h2 class="text-center mb-1">Login</h2>
            <% if (typeof error !=='undefined' && error) { %>
                <p style="color: var(--danger-color);" class="text-center mb-1">
                    <%= error %>
                </p>
                <% } %>
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
                    </form>
                    <p class="text-center mt-1 text-sm">New here? <a href="/signup"
                            style="color: var(--primary-color);">Sign Up</a></p>
        </div>
    </div>

    <%- include('partials/footer') %>